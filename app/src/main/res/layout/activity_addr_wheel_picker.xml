<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <cn.bookzhan.wheel.WheelView
            android:id="@+id/wheel_province"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1" />

        <cn.bookzhan.wheel.WheelView
            android:id="@+id/wheel_city"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <cn.bookzhan.wheel.WheelView
            android:id="@+id/wheel_district"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_addr_set_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/selector_personalitem_bgcolor"
            android:layout_marginRight="5dp"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_addr_set_ok"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/selector_personalitem_bgcolor"
            android:text="确定"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>